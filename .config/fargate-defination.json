{
    "family": "laravel-app-backend-task",
    "executionRoleArn": "arn:aws:iam::980921747919:role/ecsTaskExecutionRole",
    "networkMode": "awsvpc",
    "containerDefinitions": [
        {
            "name": "laravel-app-db",
            "image": "980921747919.dkr.ecr.ap-northeast-1.amazonaws.com/test-db:latest",
            "essential": true,
            "memory": 512,
            "cpu": 256,
            "environment": [
                {
                    "name": "MYSQL_ROOT_PASSWORD",
                    "value": "root"
                },
                {
                    "name": "MYSQL_DATABASE",
                    "value": "laravel"
                },
                {
                    "name": "MYSQL_USER",
                    "value": "sail"
                },
                {
                    "name": "MYSQL_PASSWORD",
                    "value": "password"
                }
            ],
            "portMappings": [
                {
                    "containerPort": 3306,
                    "protocol": "tcp"
                }
            ]
        },
        {
            "name": "laravel-app-nginx",
            "image": "980921747919.dkr.ecr.ap-northeast-1.amazonaws.com/test-nginx:latest",
            "essential": true,
            "memory": 256,
            "cpu": 128,
            "portMappings": [
                {
                    "containerPort": 80,
                    "protocol": "tcp"
                }
            ],
            "dependsOn": [
                {
                    "containerName": "laravel-app-php",
                    "condition": "START"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/laravel-app-nginx",
                    "awslogs-region": "ap-northeast-1",
                    "awslogs-stream-prefix": "nginx"
                }
            },
            "mountPoints": [
                {
                    "sourceVolume": "shared-www-volume",
                    "containerPath": "/var/www"
                }
            ]
        },
        {
            "name": "laravel-app-php",
            "image": "980921747919.dkr.ecr.ap-northeast-1.amazonaws.com/test-laravel:latest",
            "essential": true,
            "memory": 1024,
            "cpu": 512,
            "environment": [
                {
                    "name": "DB_HOST",
                    "value": "laravel-app-db"
                },
                {
                    "name": "DB_PORT",
                    "value": "3306"
                },
                {
                    "name": "DB_DATABASE",
                    "value": "laravel"
                },
                {
                    "name": "DB_USERNAME",
                    "value": "sail"
                },
                {
                    "name": "DB_PASSWORD",
                    "value": "password"
                }
            ],
            "portMappings": [
                {
                    "containerPort": 9000,
                    "protocol": "tcp"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/laravel-app-php",
                    "awslogs-region": "ap-northeast-1",
                    "awslogs-stream-prefix": "php"
                }
            },
            "mountPoints": [
                {
                    "sourceVolume": "shared-www-volume",
                    "containerPath": "/var/www"
                }
            ]
        }
    ],
    "volumes": [
        {
            "name": "shared-www-volume",
            "dockerVolumeConfiguration": {
                "autoprovision": true,
                "scope": "task"
            }
        }
    ],
    "requiresCompatibilities": ["FARGATE"],
    "cpu": "1024",
    "memory": "2048",
    "runtimePlatform": {
        "operatingSystemFamily": "LINUX"
    }
}
